
@model IEnumerable<MiniBlog.Core.ViewModels.ListView.ListPictureViewModel>

@{
    ViewData["Title"] = "Pictures";
}
<h1>Pictures</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Small)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Big)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.Small)" style="height:60px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Big)
                </td>
                <td>
                    @Html.ActionLink("删除", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
<pager option="ViewBag.Options" action-url="/Home/Pictures"></pager>
